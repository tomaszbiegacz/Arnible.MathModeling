using System;
using System.Collections.Generic;
using Xunit;
using Arnible.MathModeling.Polynomials;

namespace Arnible.MathModeling.xunit
{
  public static class AssertNumber
  {
<#
		PrintCommon();
        Print_NumberExtension("PolynomialDivision");
        Print_NumberExtension("Polynomial");
        Print_NumberExtension("PolynomialTerm");
#>
        
    //
    // Formal extensions
    //

    public static void AreDerivativesEqual(PolynomialDivision value, Number term, Derivative1Value actual)
    {
      PolynomialTerm termSingle = (PolynomialTerm)term;
      PolynomialDivision firstDerivative = value.DerivativeBy(termSingle);
      AreEqual<Number>(firstDerivative, actual.First);
    }

    public static void IsZero(Polynomial value)
    {      
      AreEqual<Polynomial>(0, value);
    }

    public static void IsZero(PolynomialDivision value)
    {      
      AreEqual<PolynomialDivision>(0, value);
    }
  }
}